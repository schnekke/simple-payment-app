@using System.Security.Principal
@using System.Security.Claims

@if (User.Identity.IsAuthenticated)
{
    var identity = User.Identity as ClaimsIdentity;
    string username = identity.Claims.FirstOrDefault(c => c.Type == "preferred_username")?.Value;
<ul class="nav navbar-nav navbar-right">
    <li class="navbar-text">You logged in as @username</li>
    <li><a asp-area="" asp-controller="Account" asp-action="SignOut">Sign out</a></li>
</ul>
}
else
{
<ul class="nav navbar-nav navbar-right">
    <li><a asp-area="" asp-controller="Account" asp-action="Signin">Sign in</a></li>
</ul>
}